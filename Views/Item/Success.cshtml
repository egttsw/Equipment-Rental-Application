@model Equipment_Rental_Application.Models.Item

<form method="post" asp-action="Success">
    <input form="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Order sent successfully</h2> 
        </div>
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <a asp-controller="Home" asp-action="History" class="btn btn-primary w-75">View My Orders</a>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                    </div>
                </div>
            </div>
        </div>
</form>

@section Scripts{
    @{ 
        <partial name="_ValidationScriptsPartial" />
    }
}