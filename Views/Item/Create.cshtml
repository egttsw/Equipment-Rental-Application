@model Equipment_Rental_Application.Models.Item

@using (Html.BeginForm()){
<form method="post" asp-action="Create">
    
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2> 
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                         <label asp-for="EquipmentName">Equipment name</label>
                    </div>
                    <div class="col-6">
                        <label asp-for="Duration"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <div>@Html.DropDownListFor(model => Model.DropDownId, new SelectList(Model.Products, "Id", "EquipmentName", "Selected"))</div>
                        <span asp-validation-for="EquipmentName" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
}

@section Scripts{
    @{ 
        <partial name="_ValidationScriptsPartial" />
    }
}